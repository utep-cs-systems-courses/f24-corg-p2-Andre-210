#include <msp430.h>
#include "led.h"
#include "switches.h"

// flags to check states
unsigned char led_altered = 0;          // initially unaltered (0)
unsigned char r_on = 0, g_on = 0;       // initially off (0)

// arrays to represent possible states of leds (e.g. 0 = off, on = LED_RED)
static char redVal[] = {0, LED_RED}, greenVal[] = {0, LED_GREEN};

// initializes led hardware
void led_init() {
  P1DIR |= LEDS;
  
}

// updates the led states based on r_on/g_on
void led_update() {}

// turns on the green led
void green_on() {}

// turns on the red led
void red_on() {}

// turns off both leds
void leds_off() {}

// flashes the leds
void led_flash(int n) {}
